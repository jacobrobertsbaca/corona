<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.main.MainActivity">

    <fragment
        android:id="@+id/activity_main_homeFragment"
        android:name="com.spreadtracker.ui.fragment.home.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/activity_main_infoButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_info"
        android:tint="@color/grayDark"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/activity_main_profileButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_profile"
        android:tint="@color/grayDark"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>