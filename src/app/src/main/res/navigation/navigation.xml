<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.spreadtracker.ui.fragment.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_infoFragment"
            app:destination="@+id/infoFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.spreadtracker.ui.fragment.info.InfoFragment"
        android:label="InfoFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.spreadtracker.ui.fragment.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_generalSettingsFragment"
            app:destination="@id/generalSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_profileFragment_to_medicalHistorySettingsFragment"
            app:destination="@id/medicalHistorySettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/generalSettingsFragment"
        android:name="com.spreadtracker.ui.fragment.settings.general.GeneralSettingsFragment"
        android:label="GeneralSettingsFragment" >
        <action
            android:id="@+id/action_generalSettingsFragment_to_general_PhysicalActivitySettingsFragment"
            app:destination="@id/general_PhysicalActivitySettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/medicalHistorySettingsFragment"
        android:name="com.spreadtracker.ui.fragment.settings.medicalhistory.MedicalHistorySettingsFragment"
        android:label="MedicalHistorySettingsFragment" >
        <action
            android:id="@+id/action_medicalHistorySettingsFragment_to_medicalHistory_DiseasesSettingsFragment"
            app:destination="@id/medicalHistory_DiseasesSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/medicalHistory_DiseasesSettingsFragment"
        android:name="com.spreadtracker.ui.fragment.settings.medicalhistory.MedicalHistory_DiseasesSettingsFragment"
        android:label="MedicalHistory_DiseasesSettingsFragment" />
    <fragment
        android:id="@+id/general_PhysicalActivitySettingsFragment"
        android:name="com.spreadtracker.ui.fragment.settings.general.General_PhysicalActivitySettingsFragment"
        android:label="General_PhysicalActivitySettingsFragment" />
</navigation>